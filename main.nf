    if (params.gff.endsWith('.gz')) {
        process GUNZIP_GFF {
            input:
            file gff from Channel.fromPath(params.gff, checkIfExists: true)

            output:
            file "$unzip" into ch_gff

            script:
            unzip = gff.toString() - '.gz'
            """
            pigz -f -d -p $task.cpus $gff
