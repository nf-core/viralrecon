    output:
    file "*.snpEff.csv" into ch_unicycler_snpeff_mqc
    file "*.vcf.gz*"
    file "*.{txt,html}"

    script:
    """
    mkdir -p ./data/genomes/ && cd ./data/genomes/
    ln -s ../../$fasta ${index_base}.fa
    cd ../../
    mkdir -p ./data/${index_base}/ && cd ./data/${index_base}/
    ln -s ../../$gff genes.gff
